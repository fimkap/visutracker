<div id="articles" class="transitions-enabled">
  <% @articles.each do |article| %>
    <div class="box" style="margin-left:auto;margin-right:auto;width:500px">
      <div class="panel panel-default">
        <div class="panel-body">
					<div class="card">
						<div class="card-block">
							<h3 class="card-title"><%= article.title %></h3>
						</div>
						<img src="<%= article.image.url(:medium)%>" alt="Card image">
						<div class="card-block">
							<p class="card-text"><%= article.text %></p>
						</div>
					</div>
          <br/><strong><%= article.user.email if article.user %></strong><br/>
        </div>
        <% if article.user == current_user %>
          <div class="panel-footer">
            <div class="btn-group">
              <%= link_to 'Edit', edit_article_path(article), :class => "btn btn-warning" %>
              <%= link_to 'Destroy', article, method: :delete, :class => "btn btn-danger" %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  <% end %>
</div>
<div class="center">
<%= will_paginate @articles, renderer: BootstrapPagination::Rails %>
</div>
