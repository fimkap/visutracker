<div id="articles" class="transitions-enabled">
  <% @articles.each do |article| %>
    <div class="box" style="margin-left:auto;margin-right:auto;width:500px">
      <div class="panel panel-default">
        <%= link_to image_tag(article.image.url(:medium)), article %>
        <div class="panel-body">
          <h3><%= article.title %></h2>
          <h4><%= article.text %></h4>
          <br/><strong><%= article.user.email if article.user %></strong><br/>
        </div>
        <% if article.user == current_user %>
          <div class="panel-footer">
            <%= link_to 'Edit', edit_article_path(article) %><br/>
            <%= link_to 'Destroy', article, method: :delete, data: { confirm: 'Are you sure?' } %>
          </div>
        <% end %>
      </div>
    </div>
  <% end %>
</div>
<div class="center">
<%= will_paginate @pins, renderer: BootstrapPagination::Rails %>
</div>
